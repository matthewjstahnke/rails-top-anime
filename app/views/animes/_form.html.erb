<%= form_for @anime do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :genre %>
        <%= f.text_field :genre %>
    </div>
    <div>
        <%= f.label :release_year %>
        <%= f.text_field :release_year %>
    </div>
    <div>
        <%= f.label :episode_count %>
        <%= f.text_field :episode_count %>
    </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit 'submit', class: "btn purple darken-3" %>
<% end %>
